<resources>
    <!-- Base application theme. -->
    <style name="Theme.TAED" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.TAED.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TAED.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TAED.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Стиль для пунктов меню NavigationView -->
    <style name="AppMenuItem" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- Стиль для текста меню в Toolbar -->
    <style name="ToolbarMenuText" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>